<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/gray_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view3ndlf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="74dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/montserrat"
                android:gravity="end"
                android:lineSpacingExtra="4sp"
                android:maxLines="2"
                android:text="ПОДГОТОВКА ОТЧЕТОВ В ПФР"
                android:textColor="#3C3C3C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view3ndlf"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="79dp"
                android:layout_marginEnd="19dp"
                android:fontFamily="@font/montserrat"
                android:text="Все организации, независимо от организационно-правовой формы и системы налогообложения, а также индивидуальные предприниматели, заключившие трудовые или гражданско-правовые договора, обязаны ежемесячно направлять в Пенсионный фонд форму СЗВ-М по застрахованным лицам.  \n\nДанное требование распространяется также на лиц, привлеченных по договору авторского заказа, авторов произведений литературы, искусства, науки, на получающих выплаты по лицензионным договорам."
                android:textColor="#3C3C3C"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view1"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="19dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/montserrat"
                android:text="Все услуги смотрите в нашем каталоге на главной"
                android:textColor="#3C3C3C"
                android:textSize="16sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
